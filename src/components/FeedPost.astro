---
import type { FeedPost } from '../data/feed';

interface Props {
	post: FeedPost;
}

const { post } = Astro.props;
---

<article class="feed-post" data-post-id={post.id}>
	<div class="post-header">
		<div class="author-info">
			<div class="avatar">{post.author.charAt(0)}</div>
			<div>
				<div class="author-name">{post.author}</div>
				<div class="author-role">{post.authorRole}</div>
			</div>
		</div>
		<div class="post-timestamp">{post.timestamp}</div>
	</div>
	
	<div class="post-content">
		<span class="post-text" data-translation={post.translation || undefined}>
			{post.content}
		</span>
		{post.translation && (
			<button class="translate-button" data-post-id={post.id}>
				<span class="translate-text">Translate to English</span>
			</button>
		)}
		{post.images && post.images.length > 0 && (
			<div class="post-images">
				{post.images.map((image) => (
					<figure class="post-image">
						<img src={image.url} alt={image.alt} />
						<figcaption class="image-citation">
							<em>Source: {image.citation}</em>
						</figcaption>
					</figure>
				))}
			</div>
		)}
	</div>
	
	<div class="post-actions">
		<button class="action-button like-button" data-post-id={post.id}>
			<span class="action-icon">üëç</span>
			<span class="action-count">{post.likes}</span>
		</button>
		<button class="action-button comment-button">
			<span class="action-icon">üí¨</span>
			<span class="action-count">{post.comments}</span>
		</button>
		<button class="action-button share-button">
			<span class="action-icon">‚ÜóÔ∏è</span>
			<span>Share</span>
		</button>
	</div>
</article>

<script>
	// Add interactive like functionality and translation
	document.addEventListener('DOMContentLoaded', () => {
		const likeButtons = document.querySelectorAll('.like-button');
		
		likeButtons.forEach(button => {
			button.addEventListener('click', function(this: HTMLButtonElement) {
				const postId = (this as HTMLElement).dataset.postId;
				const countElement = this.querySelector('.action-count') as HTMLElement;
				const currentCount = parseInt(countElement?.textContent || '0');
				
				// Toggle liked state
				if (this.classList.contains('liked')) {
					this.classList.remove('liked');
					if (countElement) countElement.textContent = String(currentCount - 1);
					this.style.transform = 'scale(1)';
				} else {
					this.classList.add('liked');
					if (countElement) countElement.textContent = String(currentCount + 1);
					this.style.transform = 'scale(1.2)';
					setTimeout(() => {
						this.style.transform = 'scale(1)';
					}, 200);
				}
			});
		});

		// Translation functionality
		const translateButtons = document.querySelectorAll('.translate-button');
		translateButtons.forEach(button => {
			button.addEventListener('click', function(this: HTMLButtonElement) {
				const postId = (this as HTMLElement).dataset.postId;
				const postElement = document.querySelector(`article[data-post-id="${postId}"]`) as HTMLElement;
				const textElement = postElement?.querySelector('.post-text') as HTMLElement;
				const translateText = this.querySelector('.translate-text') as HTMLElement;
				
				if (textElement && (textElement as HTMLElement).dataset.translation) {
					const translation = (textElement as HTMLElement).dataset.translation || '';
					
					if (textElement.classList.contains('translated')) {
						// Switch back to original
						const originalText = (textElement as HTMLElement).dataset.originalText || textElement.textContent || '';
						textElement.textContent = originalText;
						textElement.classList.remove('translated');
						if (translateText) translateText.textContent = 'Translate to English';
					} else {
						// Store original and switch to translation
						const originalText = textElement.textContent || '';
						(textElement as HTMLElement).dataset.originalText = originalText;
						textElement.textContent = translation;
						textElement.classList.add('translated');
						if (translateText) translateText.textContent = 'Show Original';
					}
				}
			});
		});
	});
</script>

<style>
	.feed-post {
		background: #fff;
		border: 1px solid #000;
		border-radius: 0;
		padding: 1.5rem;
		margin-bottom: 1.5rem;
		transition: all 0.2s;
		animation: fadeInUp 0.5s ease-out;
		box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.1);
		position: relative;
		font-family: 'Newsreader', 'Times New Roman', serif;
		border-top: 2px solid #000;
	}

	.feed-post:hover {
		box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.2);
		transform: translate(-1px, -1px);
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.post-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 1rem;
		gap: 1rem;
	}

	.author-info {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		flex: 1;
	}

	.avatar {
		width: 48px;
		height: 48px;
		border-radius: 0;
		background: #000;
		color: #fff;
		display: flex;
		align-items: center;
		justify-content: center;
		font-weight: 700;
		font-size: 1.25rem;
		flex-shrink: 0;
		border: 2px solid #000;
		font-family: 'Old Standard TT', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
	}

	.author-name {
		font-weight: 700;
		color: #000;
		font-size: 1rem;
		margin-bottom: 0.25rem;
		font-family: 'Old Standard TT', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-size: 0.9rem;
	}

	.author-role {
		font-size: 0.75rem;
		color: #666;
		font-style: normal;
		font-family: 'Newsreader', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.post-timestamp {
		font-size: 0.7rem;
		color: #666;
		white-space: nowrap;
		font-family: 'Newsreader', 'Times New Roman', serif;
		font-style: normal;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		border-top: 1px solid #000;
		padding-top: 0.5rem;
		margin-top: 0.5rem;
	}

	.post-content {
		color: #1a1a1a;
		line-height: 1.6;
		font-size: 1rem;
		margin-bottom: 1rem;
		white-space: pre-wrap;
		position: relative;
		z-index: 1;
		font-family: 'Newsreader', 'Times New Roman', serif;
		text-align: justify;
		text-justify: inter-word;
	}

	.post-text {
		display: block;
		margin-bottom: 0.5rem;
	}

	.translate-button {
		background: transparent;
		border: 1px solid #8b7355;
		color: #4a5568;
		padding: 0.4rem 0.8rem;
		font-size: 0.75rem;
		font-family: 'Newsreader', 'Times New Roman', serif;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		cursor: pointer;
		transition: all 0.2s;
		border-radius: 0;
		margin-top: 0.5rem;
		font-weight: 600;
	}

	.translate-button:hover {
		background: rgba(74, 85, 104, 0.1);
		border-color: #4a5568;
		color: #8b4a4a;
	}

	.post-text.translated {
		font-style: italic;
		color: #666;
	}

	.post-actions {
		display: flex;
		gap: 1rem;
		padding-top: 1rem;
		border-top: 1px solid #f0f0f0;
	}

	.action-button {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		background: none;
		border: none;
		color: #666;
		font-size: 0.9rem;
		cursor: pointer;
		padding: 0.5rem 1rem;
		border-radius: 24px;
		transition: all 0.2s;
		font-family: inherit;
	}

	.action-button:hover {
		background: #f5f1e8;
		color: #8B4513;
	}

	.action-icon {
		font-size: 1.1rem;
	}

	.action-count {
		font-weight: 500;
	}

	.like-button.liked {
		color: #8B4513;
		background: #f5f1e8;
	}

	.like-button.liked .action-icon {
		animation: bounce 0.4s ease;
	}

	@keyframes bounce {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.3) rotate(10deg); }
	}

	.post-images {
		margin-top: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.post-image {
		margin: 0;
		border: 2px solid #000;
		background: #fff;
		overflow: hidden;
	}

	.post-image img {
		width: 100%;
		height: auto;
		display: block;
		object-fit: cover;
	}

	.image-citation {
		padding: 0.75rem 1rem;
		background: #f5f5f5;
		border-top: 1px solid #ddd;
		font-size: 0.75rem;
		color: #666;
		font-style: italic;
		line-height: 1.4;
		font-family: 'Newsreader', 'Times New Roman', serif;
	}

	.image-citation em {
		font-style: normal;
	}

	@media (max-width: 768px) {
		.post-header {
			flex-direction: column;
		}

		.post-timestamp {
			align-self: flex-start;
		}
	}
</style>

