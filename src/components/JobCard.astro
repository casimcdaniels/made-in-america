---
import type { Job } from '../data/jobs';

interface Props {
	job: Job;
}

const { job } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<a href={`${base}${job.era}/${job.id}`} class="job-card">
	<div class="job-header">
		<h3 class="job-title">{job.title}</h3>
		<span class="job-type">{job.type}</span>
	</div>
	<div class="job-company">{job.company}</div>
	<div class="job-meta">
		<span class="job-location">üìç {job.location}</span>
		{job.salary && <span class="job-salary">üí∞ {job.salary}</span>}
	</div>
	<div class="job-description">{job.description.substring(0, 150)}...</div>
	<div class="job-footer">
		<span class="job-date">Posted: {job.postedDate}</span>
	</div>
</a>

<style>
	.job-card {
		display: block;
		background: #fefcf8;
		border: 1px solid #8b7355;
		border-radius: 0;
		padding: 1rem;
		text-decoration: none;
		color: inherit;
		transition: all 0.2s;
		cursor: pointer;
		position: relative;
		overflow: hidden;
		font-family: 'Newsreader', 'Times New Roman', serif;
		box-shadow: 1px 1px 0px rgba(0, 0, 0, 0.1);
		border-top: 2px solid #4a5568;
		border-left: 2px solid #8b4a4a;
		background-image: 
			url("data:image/svg+xml,%3Csvg width='60' height='60' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3Cpattern id='aged' x='0' y='0' width='60' height='60' patternUnits='userSpaceOnUse'%3E%3Ccircle cx='30' cy='30' r='0.5' fill='%238b7355' opacity='0.05'/%3E%3C/pattern%3E%3C/defs%3E%3Crect width='60' height='60' fill='url(%23aged)'/%3E%3C/svg%3E");
	}

	.job-card:hover {
		border-color: #8b4a4a;
		border-left-color: #4a5568;
		box-shadow: 3px 3px 0px rgba(139, 74, 74, 0.2);
		transform: translate(-1px, -1px);
		background: #faf8f3;
	}

	.job-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 0.4rem;
		gap: 0.75rem;
	}

	.job-title {
		margin: 0;
		font-size: 1.05rem;
		font-weight: 700;
		color: #4a5568;
		flex: 1;
		font-family: 'Old Standard TT', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.03em;
		line-height: 1.2;
		border-bottom: 1px solid #8b4a4a;
		padding-bottom: 0.25rem;
		margin-bottom: 0.4rem;
	}

	.job-type {
		font-size: 0.7rem;
		color: #fff;
		background: #4a5568;
		padding: 0.25rem 0.5rem;
		border: none;
		border-radius: 0;
		white-space: nowrap;
		font-family: 'Newsreader', 'Times New Roman', serif;
		font-style: normal;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-weight: 700;
		box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1);
	}

	.job-company {
		font-size: 0.8rem;
		font-weight: 700;
		color: #333;
		margin-bottom: 0.5rem;
		font-family: 'Old Standard TT', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.job-meta {
		display: flex;
		gap: 1rem;
		margin-bottom: 0.6rem;
		font-size: 0.75rem;
		color: #666;
		flex-wrap: wrap;
		font-family: 'Newsreader', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		border-top: 1px solid #ccc;
		padding-top: 0.4rem;
	}

	.job-location,
	.job-salary {
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.job-description {
		color: #1a1a1a;
		line-height: 1.6;
		margin-bottom: 1rem;
		font-size: 0.95rem;
		font-family: 'Newsreader', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-align: justify;
	}

	.job-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 0.75rem;
		border-top: 1px solid #000;
		position: relative;
		z-index: 1;
	}

	.job-date {
		font-size: 0.7rem;
		color: #666;
		font-family: 'Newsreader', 'Times New Roman', serif;
		font-style: normal;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}
</style>

