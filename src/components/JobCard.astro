---
import type { Job } from '../data/jobs';

interface Props {
	job: Job;
}

const { job } = Astro.props;
---

<a href={`/${job.era}/${job.id}`} class="job-card">
	<div class="job-header">
		<h3 class="job-title">{job.title}</h3>
		<span class="job-type">{job.type}</span>
	</div>
	<div class="job-company">{job.company}</div>
	<div class="job-meta">
		<span class="job-location">üìç {job.location}</span>
		{job.salary && <span class="job-salary">üí∞ {job.salary}</span>}
	</div>
	<div class="job-description">{job.description.substring(0, 150)}...</div>
	<div class="job-footer">
		<span class="job-date">Posted: {job.postedDate}</span>
	</div>
</a>

<style>
	.job-card {
		display: block;
		background: #fff;
		border: 1px solid #000;
		border-radius: 0;
		padding: 1.5rem;
		text-decoration: none;
		color: inherit;
		transition: all 0.2s;
		cursor: pointer;
		position: relative;
		overflow: hidden;
		font-family: 'Newsreader', 'Times New Roman', serif;
		box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.1);
		border-top: 2px solid #000;
	}

	.job-card:hover {
		border-color: #000;
		box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.2);
		transform: translate(-1px, -1px);
		background: #fafafa;
	}

	.job-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 0.5rem;
		gap: 1rem;
	}

	.job-title {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 700;
		color: #000;
		flex: 1;
		font-family: 'Old Standard TT', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.03em;
		line-height: 1.3;
		border-bottom: 2px solid #000;
		padding-bottom: 0.5rem;
		margin-bottom: 0.5rem;
	}

	.job-type {
		font-size: 0.7rem;
		color: #fff;
		background: #000;
		padding: 0.25rem 0.5rem;
		border: none;
		border-radius: 0;
		white-space: nowrap;
		font-family: 'Newsreader', 'Times New Roman', serif;
		font-style: normal;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-weight: 700;
	}

	.job-company {
		font-size: 0.9rem;
		font-weight: 700;
		color: #333;
		margin-bottom: 0.75rem;
		font-family: 'Old Standard TT', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.job-meta {
		display: flex;
		gap: 1.5rem;
		margin-bottom: 1rem;
		font-size: 0.8rem;
		color: #666;
		flex-wrap: wrap;
		font-family: 'Newsreader', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		border-top: 1px solid #ccc;
		padding-top: 0.5rem;
	}

	.job-location,
	.job-salary {
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.job-description {
		color: #1a1a1a;
		line-height: 1.6;
		margin-bottom: 1rem;
		font-size: 0.95rem;
		font-family: 'Newsreader', 'Times New Roman', serif;
		position: relative;
		z-index: 1;
		text-align: justify;
	}

	.job-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 0.75rem;
		border-top: 1px solid #000;
		position: relative;
		z-index: 1;
	}

	.job-date {
		font-size: 0.7rem;
		color: #666;
		font-family: 'Newsreader', 'Times New Roman', serif;
		font-style: normal;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}
</style>

