---
import type { HistoricalEvent } from '../data/feed';

interface Props {
	events: HistoricalEvent[];
}

const { events } = Astro.props;
---

{events.length > 0 && (
	<div class="events-box">
		<div class="events-header">
			<h3>Events</h3>
		</div>
		<div class="events-list">
			{events.map((event) => (
				<div class="event-item">
					<div class="event-date">{event.date}</div>
					<div class="event-title">{event.title}</div>
					<div class="event-description">{event.description}</div>
				</div>
			))}
		</div>
	</div>
)}

<style>
	.events-box {
		background: #fefcf8;
		border: 2px solid #8b7355;
		border-left: 5px solid #4a5568;
		border-radius: 0;
		padding: 1.5rem;
		margin-bottom: 2rem;
		box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.1);
		position: relative;
		font-family: 'Newsreader', 'Times New Roman', serif;
		background-image: 
			url("data:image/svg+xml,%3Csvg width='60' height='60' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3Cpattern id='aged' x='0' y='0' width='60' height='60' patternUnits='userSpaceOnUse'%3E%3Ccircle cx='30' cy='30' r='0.5' fill='%238b7355' opacity='0.05'/%3E%3C/pattern%3E%3C/defs%3E%3Crect width='60' height='60' fill='url(%23aged)'/%3E%3C/svg%3E");
	}

	.events-header {
		margin-bottom: 1.25rem;
		padding-bottom: 0.75rem;
		border-bottom: 2px solid #8b7355;
	}

	.events-header h3 {
		margin: 0;
		font-size: 1.1rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: #4a5568;
		font-family: 'Old Standard TT', 'Times New Roman', serif;
	}

	.events-list {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.event-item {
		padding-bottom: 1.25rem;
		border-bottom: 1px dashed #d4c4a8;
		position: relative;
	}

	.event-item:last-child {
		border-bottom: none;
		padding-bottom: 0;
	}

	.event-date {
		font-size: 0.75rem;
		color: #8b4a4a;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: 0.5rem;
		font-family: 'Newsreader', 'Times New Roman', serif;
	}

	.event-title {
		font-size: 1rem;
		font-weight: 700;
		color: #2c2416;
		margin-bottom: 0.5rem;
		font-family: 'Old Standard TT', 'Times New Roman', serif;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.event-description {
		font-size: 0.9rem;
		color: #333;
		line-height: 1.6;
		text-align: justify;
		font-family: 'Newsreader', 'Times New Roman', serif;
	}

	@media (max-width: 768px) {
		.events-box {
			padding: 1rem;
		}

		.event-title {
			font-size: 0.9rem;
		}

		.event-description {
			font-size: 0.85rem;
		}
	}
</style>

