<div class="job-filter">
	<div class="filter-header">
		<h3>Filter Positions</h3>
	</div>

	<div class="filter-section">
		<label class="filter-label">Gender</label>
		<select class="filter-select" id="filter-gender">
			<option value="any">Any</option>
			<option value="male">Male</option>
			<option value="female">Female</option>
		</select>
	</div>

	<div class="filter-section">
		<label class="filter-label">Race</label>
		<select class="filter-select" id="filter-race">
			<option value="any">Any</option>
			<option value="white">White</option>
			<option value="black">Black</option>
		</select>
	</div>

	<div class="filter-section">
		<label class="filter-label">Age Range</label>
		<div class="age-inputs">
			<input type="number" class="filter-input" id="filter-min-age" placeholder="Min" min="0" max="100">
			<span class="age-separator">-</span>
			<input type="number" class="filter-input" id="filter-max-age" placeholder="Max" min="0" max="100">
		</div>
	</div>

	<div class="filter-section">
		<label class="filter-label">Education</label>
		<select class="filter-select" id="filter-education">
			<option value="any">Any</option>
			<option value="none">None</option>
			<option value="elementary">Elementary</option>
			<option value="highschool">High School</option>
			<option value="college">College</option>
			<option value="graduate">Graduate</option>
		</select>
	</div>

	<div class="filter-section">
		<label class="filter-label">Experience</label>
		<select class="filter-select" id="filter-experience">
			<option value="any">Any</option>
			<option value="none">None</option>
			<option value="some">Some</option>
			<option value="experienced">Experienced</option>
		</select>
	</div>

	<div class="filter-section">
		<label class="filter-label">Union</label>
		<select class="filter-select" id="filter-union">
			<option value="any">Any</option>
			<option value="true">Union Required</option>
			<option value="false">Non-Union</option>
		</select>
	</div>

	<div class="filter-section">
		<label class="filter-label">Marital Status</label>
		<select class="filter-select" id="filter-marital">
			<option value="any">Any</option>
			<option value="single">Single</option>
			<option value="married">Married</option>
		</select>
	</div>

	<button class="clear-filters" id="clear-filters">Clear All Filters</button>
</div>

<style>
	.job-filter {
		background: #fefcf8;
		border: 2px solid #8b7355;
		border-left: 5px solid #4a5568;
		border-radius: 0;
		padding: 1rem;
		box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.1);
		position: relative;
		font-family: 'Old Standard TT', serif;
	}

	.filter-header {
		margin-bottom: 1rem;
		padding-bottom: 0.75rem;
		border-bottom: 2px solid #8b7355;
	}

	.filter-header h3 {
		margin: 0;
		font-size: 1rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: #4a5568;
		font-family: 'Newsreader', 'Times New Roman', serif;
	}

	.filter-section {
		margin-bottom: 1rem;
	}

	.filter-label {
		display: block;
		margin-bottom: 0.5rem;
		font-size: 0.85rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: #4a5568;
		font-family: 'Newsreader', 'Times New Roman', serif;
	}

	.filter-select,
	.filter-input {
		width: 100%;
		padding: 0.5rem;
		border: 1px solid #8b7355;
		background: #faf8f3;
		color: #2c2416;
		font-family: 'Newsreader', 'Times New Roman', serif;
		font-size: 0.9rem;
		border-radius: 0;
		cursor: pointer;
	}

	.filter-select:focus,
	.filter-input:focus {
		outline: none;
		border-color: #8b4a4a;
		box-shadow: 0 0 0 2px rgba(139, 74, 74, 0.2);
	}

	.age-inputs {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.age-inputs .filter-input {
		flex: 1;
	}

	.age-separator {
		color: #8b7355;
		font-weight: 700;
	}

	.clear-filters {
		width: 100%;
		padding: 0.75rem;
		margin-top: 1rem;
		background: transparent;
		border: 1px solid #8b4a4a;
		color: #8b4a4a;
		font-family: 'Newsreader', 'Times New Roman', serif;
		font-size: 0.85rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		cursor: pointer;
		border-radius: 0;
		transition: all 0.2s;
	}

	.clear-filters:hover {
		background: rgba(139, 74, 74, 0.1);
		border-color: #6a3838;
		color: #6a3838;
	}

	.clear-filters:active {
		transform: translate(1px, 1px);
		box-shadow: none;
	}
</style>

<script>
	function getFilters() {
		const gender = document.getElementById('filter-gender')?.value || 'any';
		const race = document.getElementById('filter-race')?.value || 'any';
		const minAge = document.getElementById('filter-min-age')?.value;
		const maxAge = document.getElementById('filter-max-age')?.value;
		const education = document.getElementById('filter-education')?.value || 'any';
		const experience = document.getElementById('filter-experience')?.value || 'any';
		const union = document.getElementById('filter-union')?.value;
		const maritalStatus = document.getElementById('filter-marital')?.value || 'any';

		const filters = {};

		if (gender !== 'any') filters.gender = gender;
		if (race !== 'any') filters.race = race;
		if (minAge) filters.minAge = parseInt(minAge);
		if (maxAge) filters.maxAge = parseInt(maxAge);
		if (education !== 'any') filters.education = education;
		if (experience !== 'any') filters.experience = experience;
		if (union === 'true') filters.union = true;
		if (union === 'false') filters.union = false;
		if (maritalStatus !== 'any') filters.maritalStatus = maritalStatus;

		return filters;
	}

	function dispatchFilterChange() {
		const filters = getFilters();
		document.dispatchEvent(new CustomEvent('filterChange', { detail: filters }));
	}

	document.addEventListener('DOMContentLoaded', () => {
		const genderSelect = document.getElementById('filter-gender');
		const raceSelect = document.getElementById('filter-race');
		const minAgeInput = document.getElementById('filter-min-age');
		const maxAgeInput = document.getElementById('filter-max-age');
		const educationSelect = document.getElementById('filter-education');
		const experienceSelect = document.getElementById('filter-experience');
		const unionSelect = document.getElementById('filter-union');
		const maritalSelect = document.getElementById('filter-marital');
		const clearButton = document.getElementById('clear-filters');

		if (genderSelect) genderSelect.addEventListener('change', dispatchFilterChange);
		if (raceSelect) raceSelect.addEventListener('change', dispatchFilterChange);
		if (minAgeInput) minAgeInput.addEventListener('input', dispatchFilterChange);
		if (maxAgeInput) maxAgeInput.addEventListener('input', dispatchFilterChange);
		if (educationSelect) educationSelect.addEventListener('change', dispatchFilterChange);
		if (experienceSelect) experienceSelect.addEventListener('change', dispatchFilterChange);
		if (unionSelect) unionSelect.addEventListener('change', dispatchFilterChange);
		if (maritalSelect) maritalSelect.addEventListener('change', dispatchFilterChange);

		if (clearButton) {
			clearButton.addEventListener('click', () => {
				if (genderSelect) genderSelect.value = 'any';
				if (raceSelect) raceSelect.value = 'any';
				if (minAgeInput) minAgeInput.value = '';
				if (maxAgeInput) maxAgeInput.value = '';
				if (educationSelect) educationSelect.value = 'any';
				if (experienceSelect) experienceSelect.value = 'any';
				if (unionSelect) unionSelect.value = 'any';
				if (maritalSelect) maritalSelect.value = 'any';
				dispatchFilterChange();
			});
		}
	});
</script>

