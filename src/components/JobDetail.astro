---
import type { Job } from '../data/jobs';

interface Props {
	job: Job;
}

const { job } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<article class="job-detail">
	<div class="job-detail-header">
		<div>
			<h1 class="job-detail-title">{job.title}</h1>
			<div class="job-detail-company">{job.company}</div>
			<div class="job-detail-meta">
				<span class="job-detail-location">üìç {job.location}</span>
				<span class="job-detail-type">{job.type}</span>
				{job.salary && <span class="job-detail-salary">üí∞ {job.salary}</span>}
			</div>
		</div>
		<a href={`${base}${job.era}`} class="back-link">‚Üê Back to Listings</a>
	</div>

	<div class="job-detail-content">
		<section class="job-section">
			<h2>Job Description</h2>
			<p>{job.description}</p>
		</section>

		<section class="job-section">
			<h2>Requirements</h2>
			<ul class="requirements-list">
				{job.requirements.map(req => (
					<li>{req}</li>
				))}
			</ul>
		</section>

		<section class="job-section">
			<div class="job-info">
				<div class="info-item">
					<strong>Posted:</strong> {job.postedDate}
				</div>
				<div class="info-item">
					<strong>Job Type:</strong> {job.type}
				</div>
				{job.salary && (
					<div class="info-item">
						<strong>Salary:</strong> {job.salary}
					</div>
				)}
			</div>
		</section>
	</div>

	<div class="job-detail-actions">
		<button class="apply-button">Apply Now</button>
		<button class="save-button">Save Job</button>
	</div>
</article>

<style>
	.job-detail {
		background: #fefcf8;
		border-radius: 0;
		padding: 2rem;
		max-width: 900px;
		margin: 0 auto;
		border: 2px solid #8b7355;
		border-top: 4px solid #8b4a4a;
		box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.1);
		background-image: 
			url("data:image/svg+xml,%3Csvg width='100' height='100' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3Cpattern id='paper' x='0' y='0' width='100' height='100' patternUnits='userSpaceOnUse'%3E%3Ccircle cx='20' cy='20' r='0.5' fill='%23d4c4a8' opacity='0.2'/%3E%3Ccircle cx='80' cy='40' r='0.5' fill='%23d4c4a8' opacity='0.15'/%3E%3Ccircle cx='40' cy='80' r='0.5' fill='%23d4c4a8' opacity='0.18'/%3E%3C/pattern%3E%3C/defs%3E%3Crect width='100' height='100' fill='url(%23paper)'/%3E%3C/svg%3E");
	}

	.job-detail-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 2rem;
		padding-bottom: 2rem;
		border-bottom: 2px solid #8b7355;
		gap: 2rem;
	}

	.job-detail-title {
		margin: 0 0 0.5rem 0;
		font-size: 2rem;
		font-weight: 700;
		color: #4a5568;
		font-family: 'Old Standard TT', 'Times New Roman', serif;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		border-bottom: 3px solid #8b4a4a;
		padding-bottom: 0.5rem;
		display: inline-block;
	}

	.job-detail-company {
		font-size: 1.25rem;
		font-weight: 600;
		color: #2c2416;
		margin-bottom: 1rem;
		font-family: 'Newsreader', 'Times New Roman', serif;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.job-detail-meta {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
		font-size: 1rem;
		color: #666;
	}

	.job-detail-location,
	.job-detail-type,
	.job-detail-salary {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.back-link {
		color: #4a5568;
		text-decoration: none;
		font-size: 0.95rem;
		white-space: nowrap;
		padding: 0.5rem 1rem;
		border: 1px solid #8b7355;
		border-radius: 0;
		transition: all 0.2s;
		font-family: 'Newsreader', 'Times New Roman', serif;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-weight: 600;
		background: #fefcf8;
	}

	.back-link:hover {
		background: #8b4a4a;
		color: #fff;
		border-color: #8b4a4a;
	}

	.job-detail-content {
		margin-bottom: 2rem;
	}

	.job-section {
		margin-bottom: 2rem;
	}

	.job-section h2 {
		font-size: 1.5rem;
		font-weight: 700;
		margin: 0 0 1rem 0;
		color: #4a5568;
		font-family: 'Newsreader', 'Times New Roman', serif;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		border-bottom: 2px solid #8b4a4a;
		padding-bottom: 0.5rem;
		display: inline-block;
	}

	.job-section p {
		line-height: 1.8;
		color: #2c2416;
		font-size: 1rem;
		margin: 0;
		font-family: 'Newsreader', 'Times New Roman', serif;
		text-align: justify;
	}

	.requirements-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.requirements-list li {
		padding: 0.75rem 0;
		padding-left: 1.5rem;
		position: relative;
		color: #2c2416;
		line-height: 1.6;
		font-family: 'Newsreader', 'Times New Roman', serif;
		border-bottom: 1px dashed #d4c4a8;
	}

	.requirements-list li::before {
		content: "‚Ä¢";
		position: absolute;
		left: 0;
		color: #8b4a4a;
		font-weight: bold;
		font-size: 1.2rem;
	}

	.job-info {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1rem;
		background: #faf8f3;
		padding: 1.5rem;
		border-radius: 0;
		border: 1px solid #8b7355;
		border-left: 3px solid #4a5568;
	}

	.info-item {
		font-size: 0.95rem;
		color: #2c2416;
		font-family: 'Newsreader', 'Times New Roman', serif;
	}

	.info-item strong {
		color: #4a5568;
		margin-right: 0.5rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.job-detail-actions {
		display: flex;
		gap: 1rem;
		padding-top: 2rem;
		border-top: 2px solid #8b7355;
	}

	.apply-button,
	.save-button {
		padding: 0.75rem 2rem;
		font-size: 1rem;
		font-weight: 700;
		border: 2px solid #4a5568;
		border-radius: 0;
		cursor: pointer;
		transition: all 0.2s;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-family: 'Newsreader', serif;
		box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.1);
	}

	.apply-button {
		background: #8b4a4a;
		color: #fefcf8;
		flex: 1;
		border-color: #8b4a4a;
	}

	.apply-button:hover {
		background: #6a3838;
		border-color: #6a3838;
		box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.2);
		transform: translate(-1px, -1px);
	}

	.save-button {
		background: #fefcf8;
		color: #4a5568;
		border-color: #4a5568;
	}

	.save-button:hover {
		background: #faf8f3;
		box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.2);
		transform: translate(-1px, -1px);
	}

	@media (max-width: 768px) {
		.job-detail-header {
			flex-direction: column;
		}

		.job-detail-title {
			font-size: 1.5rem;
		}

		.job-detail-actions {
			flex-direction: column;
		}
	}
</style>

